<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.Views.MakeMoviePage">
    <ScrollView>
        <StackLayout>
           
            <Button Text="Make a movie"    
                    x:Name="BtnRecord"    
                    BackgroundColor="Gray"    
                    Clicked="BtnRecord_Clicked"/>
            <Button Text="Select on movie"    
                    x:Name="BtnSelect"    
                    BackgroundColor="Green"    
                    Clicked="BtnSelect_Clicked"/>
            <Image x:Name="image"/>
        </StackLayout>
    </ScrollView>
</ContentPage>